{
	"extends": "../ts-config/extra-strict-without-decorators.json",
	"compilerOptions": {
		// Options for CommonJS
		"module": "CommonJS",
		"moduleResolution": "classic",
		"resolveJsonModule": false,
		"verbatimModuleSyntax": false,
		"skipLibCheck": true,
		"importHelpers": false,
		"noEmitHelpers": false,

		"outDir": "dist/cjs",
		"declaration": false,
		"declarationMap": false,
		"target": "ES2019"
	},
	"include": ["src"]
}
